<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="domain.Product"  table="product">
        <id name="productId" column="product_id"></id>
     <property name="productName" column="product_name"/>
        <property name="productPrice" column="Product_price"/>
        <property name="productCatagory" column="Product_catagory"/>
    </class>
</hibernate-mapping>